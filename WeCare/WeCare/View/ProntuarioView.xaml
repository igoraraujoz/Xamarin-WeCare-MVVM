<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeCare.View.ProntuarioView">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource StackDefault}">
            <StackLayout Padding="15">
                <!--<Image Source="logo.png" Aspect="AspectFit" />-->

                <Label Text="Cadastre um novo prontuário!" Margin="30" TextColor="Purple"
                    VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="Medium"/>

                <DatePicker Date="{Binding Data }" />


                <Picker x:Name="picker" 
                        Title="Selecione uma especialidade" 
                        ItemsSource="{Binding Especialidade}"
                        ItemDisplayBinding="{Binding Descricao}"
                        SelectedItem="{Binding SelectedEspecialidade}"/>

                <Entry Placeholder="Medico" Text="{Binding Medico}"/>
                <Entry Placeholder="Unidade Clínica" Text="{Binding UnidadeClinica}"/>
                <Entry Placeholder="Descrição" Text="{Binding Descricao}"/>

                <Button Text="Cadastrar" Command="{Binding CadastrarCommand}" />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>