<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeCare.View.LoginView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Padding="15">
                <Image Source="Logo_mini.png" Aspect="AspectFit" />

                <Label Text="Bem vindo!" Margin="15" TextColor="Purple"
                    VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />

                <Entry Placeholder="Usuario" Text="{Binding Usuario}" />
                <Entry Placeholder="Senha" IsPassword="true" Text="{Binding Senha}"/>

                <Button Text="Logar" Command="{Binding LogarCommand}" />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>